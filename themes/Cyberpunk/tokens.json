{
  "palette": {
    "bg": "#0a0a0f",
    "text": "#39ff14",
    "primary": "#00f0ff"
  },
  "typography": {
    "fontFamily": "Orbitron",
    "fontFile": "fonts/Orbitron-Regular.ttf",
    "fontSize": 16
  },
  "layout": {
    "pageMargin": 12,
    "gap": 10
  },
  "button": {
    "width": 240,
    "height": 44,
    "radius": 10,
    "padH": 16,
    "padV": 10,
    "gap": 8,
    "iconSize": 20,
    "dur": 140,
    "pressScale": 0.95,
    "bg": "#00141a",
    "fg": "#39ff14",
    "border": "#00f0ff",
    "borderWidth": 1
  },
  "navbar": {
    "width": 70,
    "pad": 8,
    "iconSize": 28,
    "text": "#00f0ff",
    "bg": "#0a0a0f",
    "pressScale": 0.92
  },
  "icons": {
      "home": "icons/home_cyber.svg",
      "music": "icons/music_cyber.svg",
      "maps": "icons/maps_cyber.svg",
      "settings": "icons/settings_cyber.svg",
      "play": "icons/play_cyber.svg",
      "pause": "icons/pause_cyber.svg",
      "next": "icons/next_cyber.svg",
      "previous": "icons/previous_cyber.svg",
      "search": "icons/search_cyber.svg",
      "phone": "icons/phone_cyber.svg",
      "messages": "icons/messages_cyber.svg",
      "contacts": "icons/contacts_cyber.svg",
      "tidal": "icons/tidal_cyber.svg",
      "spotify": "icons/spotify_cyber.svg",
      "radio": "icons/radio_cyber.svg",
      "podcasts": "icons/podcasts_cyber.svg",
      "climate": "icons/climate_cyber.svg",
      "vehicle": "icons/vehicle_cyber.svg",
      "camera": "icons/camera_cyber.svg",
      "weather": "icons/weather_cyber.svg"
  },
  "overlay": {
    "type": "grid",
    "spacing": 14,
    "opacity": 0.10,
    "color": "#00f0ff"
  },
  "splash": {
    "logo": "logo.svg",
    "bg": "#000000",
    "color": "#00f0ff",
    "glow": "#00f0ff66",
    "animStyle": "typewriter",
    "logoAnim": "glow",
    "logoColorMode": "colorize",
    "primaryText": "CHEVROLET",
    "secondaryText": "AMERICA'S HEARTBEAT",
    "logoSize": 220,
    "titleSize": 40,
    "subtitleSize": 18,
    "charDuration": 80,
    "holdDuration": 2500,
    "fadeOutDuration": 1200,
    "scanlines": true,
    "scanlineOpacity": 0.08,
    "scanlineSpacing": 4,
    "useGlow": true,
    "glowIntensity": 12
  }
}
